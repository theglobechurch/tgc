{% set entries = craft.entries.section('blog').
                 after(year).
                 before(year + 1).
                 orderBy('postDate desc').all() %}

{% extends '/_layouts/base' %}

{% block header %}
Blog posts from {{ year }}
{% endblock %}

{% block content %}


{% for entry in entries %}
  {% include '_partials/blogPreview' %}
{% endfor %}


{% endblock %}
