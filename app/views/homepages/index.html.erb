<div class="site-container">

  <section class="c-content-box">
    <main class="c-content-box__main">
      <div class="c-content-box__main__container">
        <h1>Join us this Sunday</h1>
        <h2>4pm at Wilcox House, 140-148 Borough High Street</h2>
        <a href="#" class="u-link u-link--arrowed u-link--black">
          <%= svg_tag('map') %>
          <span>View on a map</span>
        </a>
      </div>
    </main>
  </section>

  <div class="vision-box">
    
    <div class="vision-box__boxouter">
      <%# <img src="/assets/img/blocks/vision-box/img/jonty-960.jpg" srcset="/assets/img/blocks/vision-box/img/jonty-320.jpg 320w,/assets/img/blocks/vision-box/img/jonty-640.jpg 640w,/assets/img/blocks/vision-box/img/jonty-960.jpg 960w,/assets/img/blocks/vision-box/img/jonty-1280.jpg 1280w,/assets/img/blocks/vision-box/img/jonty-1920.jpg 1920w,/assets/img/blocks/vision-box/img/jonty-2560.jpg 2560w," alt="" class="vision-box__img" /> %>
      <%= link_to(page_path('about', anchor: "jesus"), class: 'vision-box__item vision-box__item--jesus') do %>
        <span class="vision-box__item__link">
          <h1 class="vision-box__item__title">
            The Globe Church is all about <strong>Jesus</strong>
          </h1>
        </span>
      <% end %>
    </div>

    <div class="vision-box__boxouter">
      <%# <img src="/assets/img/blocks/vision-box/img/people-960.jpg" srcset="/assets/img/blocks/vision-box/img/people-320.jpg 320w,/assets/img/blocks/vision-box/img/people-640.jpg 640w,/assets/img/blocks/vision-box/img/people-960.jpg 960w,/assets/img/blocks/vision-box/img/people-1280.jpg 1280w,/assets/img/blocks/vision-box/img/people-1920.jpg 1920w,/assets/img/blocks/vision-box/img/people-2560.jpg 2560w," alt="" class="vision-box__img" /> %>
      <%= link_to(page_path('about', anchor: "people"), class: 'vision-box__item vision-box__item--people') do %>
        <span class="vision-box__item__link">
          <h1 class="vision-box__item__title">
            Made up of all sorts of <strong>people</strong>
          </h1>
        </span>
      <% end %>
    </div>

    <div class="vision-box__boxouter">
      <%# <img src="/assets/img/blocks/vision-box/img/mission-960.jpg" srcset="/assets/img/blocks/vision-box/img/mission-320.jpg 320w,/assets/img/blocks/vision-box/img/mission-640.jpg 640w,/assets/img/blocks/vision-box/img/mission-960.jpg 960w,/assets/img/blocks/vision-box/img/mission-1280.jpg 1280w,/assets/img/blocks/vision-box/img/mission-1920.jpg 1920w,/assets/img/blocks/vision-box/img/mission-2560.jpg 2560w," alt="" class="vision-box__img" /> %>
      <%= link_to(page_path('about', anchor: "mission"), class: 'vision-box__item vision-box__item--mission') do %>
        <span class="vision-box__item__link">
          <h1 class="vision-box__item__title">
            Involved in the greatest <strong>mission</strong>
          </h1>
        </span>
      <% end %>
    </div>

  </div>

  <%= render('/shared/promo_box',
             img: @latest_sermon.banner['image'],
             link: @latest_sermon,
             title: @latest_sermon.title,
             pretitle: 'Listen back to the latest recording',
             cta: 'Go to sermon recording') if @latest_sermon %>

</div>
