<% uncontained ||= false %>
<div class="vision-box<%= " vision-box--uncontained" if uncontained == true %>">
  
  <div class="vision-box__boxouter js-object-fit-container">
    <%=
      responsive_image_tag(
        {
          "320": asset_path("home-page/the-globe-church-bible-study_320.jpg"),
          "640": asset_path("home-page/the-globe-church-bible-study_640.jpg"),
          "960": asset_path("home-page/the-globe-church-bible-study_960.jpg"),
          "1280": asset_path("home-page/the-globe-church-bible-study_1280.jpg"),
          "1920": asset_path("home-page/the-globe-church-bible-study_1920.jpg"),
          "2560": asset_path("home-page/the-globe-church-bible-study_2560.jpg"),
        },
        sizes: [
          '100vw'
        ],
        class: 'vision-box__img',
        alt: ''
      )
    %>
    <%= link_to(page_path('about', anchor: "section:jesus"), class: 'vision-box__item vision-box__item--jesus') do %>
      <span class="vision-box__item__link">
        <h1 class="vision-box__item__title">
          The Globe Church is all about <strong>Jesus</strong>
        </h1>
      </span>
    <% end %>
  </div>

  <div class="vision-box__boxouter js-object-fit-container">
    <%=
      responsive_image_tag(
        {
          "320": asset_path("home-page/the-globe-church-people_320.jpg"),
          "640": asset_path("home-page/the-globe-church-people_640.jpg"),
          "960": asset_path("home-page/the-globe-church-people_960.jpg"),
          "1280": asset_path("home-page/the-globe-church-people_1280.jpg"),
          "1920": asset_path("home-page/the-globe-church-people_1920.jpg"),
          "2560": asset_path("home-page/the-globe-church-people_2560.jpg"),
        },
        sizes: [
          '100vw'
        ],
        class: 'vision-box__img',
        alt: ''
      )
    %>
    <%= link_to(page_path('about', anchor: "section:people"), class: 'vision-box__item vision-box__item--people') do %>
      <span class="vision-box__item__link">
        <h1 class="vision-box__item__title">
          Made up of all sorts of <strong>people</strong>
        </h1>
      </span>
    <% end %>
  </div>

  <div class="vision-box__boxouter js-object-fit-container">
    <%=
      responsive_image_tag(
        {
          "320": asset_path("home-page/the-globe-church-london-southwark_320.jpg"),
          "640": asset_path("home-page/the-globe-church-london-southwark_640.jpg"),
          "960": asset_path("home-page/the-globe-church-london-southwark_960.jpg"),
          "1280": asset_path("home-page/the-globe-church-london-southwark_1280.jpg"),
          "1920": asset_path("home-page/the-globe-church-london-southwark_1920.jpg"),
          "2560": asset_path("home-page/southwark_2560.jpg"),
        },
        sizes: [
          '100vw'
        ],
        class: 'vision-box__img',
        alt: ''
      )
    %>
    <%= link_to(page_path('about', anchor: "section:mission"), class: 'vision-box__item vision-box__item--mission') do %>
      <span class="vision-box__item__link">
        <h1 class="vision-box__item__title">
          Involved in the greatest <strong>mission</strong>
        </h1>
      </span>
    <% end %>
  </div>

</div>
