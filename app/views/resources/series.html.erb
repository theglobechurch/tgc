<div class="site-container site-container--first">

  <section class="c-description-box c-description-box--lark-green">

    <div class="site-container c-description-box__inner">

      <div class="c-description-box__side">

        <div class="img-container img-container--square js-object-fit-container">
          <%=
            responsive_image_tag(
              @group.banner['image'],
              sizes: ['(min-width: 768px) 33.3vw', '(min-width: 1200px) calc(1200px / 3)' '100vw'],
              alt: @group.title
            )
          %>
        </div>

        <div class="c-description-box__side__meta">
          <p><%= @group.date_range %></p>
          <p><%= pluralize(@recordings.length, 'recording') %></p>
        </div>

      </div>

      <div class="c-description-box__content">
        <h1 class="c-description-box__title">
          <%= @group.title %>
        </h1>

        <% if @group.description %>
        <p><%= @group.description %></p>
        <% end %>

        <%= render('/shared/sermon_list',
          list: @recordings) if @recordings.present? %>
      </div>

    </div>

  </section>

  <%= render('/shared/blog_list',
    list: @blogs, 
    list_title: 'Related blog posts',
    verb: 'Read') if @blogs.present? %>

  <%= render('/shared/promo_box',
    img: {
      "320": asset_path("static-banner/the-globe-church-preaching_320.jpg"),
      "640": asset_path("static-banner/the-globe-church-preaching_640.jpg"),
      "960": asset_path("static-banner/the-globe-church-preaching_960.jpg"),
      "1280": asset_path("static-banner/the-globe-church-preaching_1280.jpg"),
      "1920": asset_path("static-banner/the-globe-church-preaching_1920.jpg"),
      "2560": asset_path("static-banner/the-globe-church-preaching_2560.jpg"),
    },
    link: preaching_path,
    title: 'All preaching from The Globe Church',
    pretitle: '',
    cta: 'See more sermon series') %>

</div>
