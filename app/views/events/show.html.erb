<div class="site-container">

  <section class="c-content-box">

      <main class="c-content-box__main">

        <div class="c-content-box__main__container">

            <% if @event.graphic %>
            <div class="c-content-box__main__container__img-container js-object-fit-container">
              <img src="<%= @event.graphic.background_image_960.try('remote_url') %>" alt="" />
            </div>
            <% end %>

            <%= markdown(@event.description) %>

        </div>

        <aside class="c-content-box__aside">

          <div class="c-content-box__aside__meta">
            <p class="c-content-box__aside__meta__title">Every Sunday</p>
            <p class="c-content-box__aside__meta__subtitle">4.30â€“6.00pm</p>
            <p class="c-content-box__aside__meta__small">You're invited to a meal after the service</p>
          </div>

          <% if @event.location %>
            <%= render('event_location', location: @event.location) %>
          <% end %>

        </aside>

      </main>
  </section>

</div>
